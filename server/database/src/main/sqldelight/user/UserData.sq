createTableIfNeeded:
CREATE TABLE IF NOT EXISTS UserData (
  id uuid PRIMARY KEY NOT NULL,
  email text NOT NULL,
  tag text NOT NULL
);

findUserByEmail:
SELECT * FROM UserData
WHERE email = ?;

findUserByTag:
SELECT * FROM UserData
WHERE tag = ?;

createUser:
INSERT INTO UserData(id, email, tag)
VALUES (?, ?, ?);

createFullUser:
INSERT INTO UserData(id, email, tag)
VALUES ?;